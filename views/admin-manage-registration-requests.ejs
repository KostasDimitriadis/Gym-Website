
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage registration   requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="text-center">
        <h2>Manage Registration Requests</h2>
    </div>

<table class="table mt-3">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% registrationRequests.forEach(request => { %>
            <tr>
                <td><%= request.username %></td>
                <td><%= request.email %></td>
                <td>
                    <form action="/admin/manage-registration-requests" method="post" style="display: inline;">
                        <input type="hidden" name="action" value="approve">
                        <input type="hidden" name="userId" value="<%= request._id %>">
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form action="/admin/manage-registration-requests" method="post" style="display: inline;">
                        <input type="hidden" name="action" value="reject">
                        <input type="hidden" name="userId" value="<%= request._id %>">
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
<div class="text-center mt-4">
    <a href="/admin/dashboard" class="btn btn-primary btn-dashed"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
      </svg>   Back to Dashboard</a>
</div>
</body>

</html>
