<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Announcement</title>

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
<div class="container mt-5">
    <h2>Manage Announcements</h2>

    <table class="table mt-3">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% announcements.forEach(announcement => { %>
                <tr>
                    <td><%= announcement.title %></td>
                    <td><%= announcement.content %></td>
                    <td>
                        <form action="/admin/manage-announcements" method="post" style="display: inline;">
                            <input type="hidden" name="action" value="delete">
                            <input type="hidden" name="announcementId" value="<%= announcement._id %>">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                
                <tr>
                    <td colspan="3">
                        <form action="/admin/manage-announcements" method="post">
                            <input type="hidden" name="action" value="edit">
                            <input type="hidden" name="announcementId" value="<%= announcement._id %>">
                            <div class="mb-3">
                                <label for="editTitle" class="form-label">Edit Title</label>
                                <input type="text" class="form-control" id="editTitle" name="title" required>
                            </div>
                            <div class="mb-3">
                                <label for="editContent" class="form-label">Edit Content</label>
                                <textarea class="form-control" id="editContent" name="content" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </form>
                    </td>
                </tr>
                <tr>
                    <td colspan="10"><hr></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a href="/admin/dashboard" class="btn btn-primary btn-dashed"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
      </svg>   Back to Dashboard</a>
</div>
</body>

</html>

