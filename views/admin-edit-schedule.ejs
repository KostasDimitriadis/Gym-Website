<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Schedule</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-5">

    <form action="/admin/manage-schedules" method="post">
        <input type="hidden" name="action" value="update">
        <input type="hidden" name="scheduleId" value="<%= schedule._id %>">

        <!-- Program -->
        <div class="mb-3">
            <label for="updateProgramId" class="form-label">Program:</label>
            <select name="updateProgramId" class="form-select">
                <% programs.forEach(program => { %>
                <option value="<%= program._id %>" <%= program._id.equals(schedule.programId._id) ? 'selected' : '' %>>
                    <%= program.name %>
                </option>
                <% }); %>
            </select>
        </div>

        <!-- Day -->
        <div class="mb-3">
            <label for="updateDay" class="form-label">Day:</label>
            <input type="text" name="updateDay" value="<%= schedule.day %>" class="form-control" required>
        </div>

        <!-- Time -->
        <div class="mb-3">
            <label for="updateTime" class="form-label">Time:</label>
            <input type="text" name="updateTime" value="<%= schedule.time %>" class="form-control" required>
        </div>

        <!-- Trainer -->
        <div class="mb-3">
            <label for="updateTrainerId" class="form-label">Trainer:</label>
            <select name="updateTrainerId" class="form-select">
                <% trainers.forEach(trainer => { %>
                <option value="<%= trainer._id %>" <%= trainer._id.equals(schedule.trainerId._id) ? 'selected' : '' %>>
                    <%= trainer.name %>
                </option>
                <% }); %>
            </select>
        </div>

        <!-- Max Capacity -->
        <div class="mb-3">
            <label for="updateMaxCapacity" class="form-label">Max Capacity:</label>
            <input type="number" name="updateMaxCapacity" value="<%= schedule.maxCapacity %>" class="form-control"
                required>
        </div>

        <button type="submit" class="btn btn-primary">Update Schedule</button>
    </form>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
