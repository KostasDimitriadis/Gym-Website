<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Program Reservation</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
  
    #logoutBtn {
      position: fixed;
      top: 20px;
      right: 20px;
    }
  </style>
  

<body>
    <a href="/login" class="btn btn-danger" id="logoutBtn">Logout</a>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h5>Program Reservation</h5>
                    </div>
                    <div class="card-body">
                        <form action="/reservation" method="post">
                            <div class="mb-3">
                                <label for="schedule" class="form-label">Select Schedule:</label>
                                <select class="form-select" id="schedule" name="scheduleId" required>
                                    <% schedules.forEach(schedule => { %>
                                        <option value="<%= schedule._id %>">
                                            <%= schedule.programId.name %> - <%= schedule.day %> at <%= schedule.time %>
                                        </option>
                                    <% }); %>
                                </select>
                                
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Book Reservation</button>
                        </form>
                        
                        <div class="text-center mt-4">
                            <a href="/functions" class="btn btn-primary btn-dashed">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
                                </svg> Back to functions
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
